{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="recipe-index">Recipe list</h1>

    <table class="table table-striped recipe-index">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Ingredients</th>
                <th>Directions</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr class="recipeDataRow">
                <td class="recipeId"><a href="{{ path('recipe_show', { 'id': recipe.id }) }}">{{ recipe.id }}</a></td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.ingredients.count() }}</td>
                <td>{{ recipe.directions.count() }}</td>
                <td>{{ recipe.imageName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}" class="btn btn-default">Edit</a>
                        </li>
                        <li>
                            <button class="btn btn-danger delete-recipe-button">Delete</button>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_new') }}" class="btn btn-primary">Create a new entry</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="{{ asset('js/recipe-form.js') }}">

{% endblock %}
