{% extends 'base.html.twig' %}

{% block body %}
    <h1>User edit</h1>
    <div class="session_form_container">
    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_errors(edit_form.username) }}
        {{ form_widget(edit_form.username) }}
        {{ form_errors(edit_form.email) }}
        {{ form_widget(edit_form.email) }}
        {{ form_errors(edit_form.password) }}
        {{ form_widget(edit_form.password) }}
        <input type="submit" value="Edit" class="btn btn-primary" />
    {{ form_end(edit_form) }}
    </div>
    <ul>
        <li>
            <a href="{{ path('user_index') }}" class="btn btn-default">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger delete-user-button">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
